@model GraduationProject.Models.GeneralSetting

<div class="row">
<div class="col-sm-12 col-md-12 col-lg-12">
<h1 class="p-4 my-2">
<img class="mx-3" src="https://img.icons8.com/external-xnimrodx-lineal-color-xnimrodx/64/000000/external-setting-advertising-xnimrodx-lineal-color-xnimrodx-2.png"/>Edit Setting</h1>
<hr />
</div>
</div>

<div class="row">
<div class="col-md-12 col-sm-12 col-lg-12">
<form asp-controller="GeneralSetting" asp-action="Edit" asp-route-id="@Model.ID">
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
<label asp-for="Extra" class="col-md-3 control-label"></label>
<div class="col-md-9 mx-3">
<input asp-for="Extra" class="form-control" />
</div>
<span asp-validation-for="Extra" class="text-danger"></span>
</div>
<div class="form-group">
<label asp-for="Discount" class="col-md-3 control-label"></label>
<div class="col-md-9 mx-3">
<input asp-for="Discount" class="form-control" />
</div>
<span asp-validation-for="Discount" class="text-danger"></span>
</div>
<div class="form-group">
<label asp-for="Dayoff_1" class="col-md-3 control-label"></label>
<div class="col-md-9 mx-3">
<select class="form-control" asp-for="Dayoff_1" id="select1" onchange="Value(this.value)">
<option value="" disabled selected>Select your option</option>
<option value="Friday">Friday</option>
<option value="Saturday">Saturday</option>
<option value="Sunday">Sunday</option>
<option value="Monday">Monday</option>
<option value="Tuesday">Tuesday</option>
<option value="Wednesday">Wednesday</option>
<option value="Thursday">Thursday</option>
</select>
</div>
<span asp-validation-for="Dayoff_1" class="text-danger"></span>
</div>
<div class="form-group">
<label asp-for="Dayoff_2" class="col-md-3 control-label"></label>
<div class="col-md-9 mx-3">
<select class="form-control" asp-for="Dayoff_2" id="select2" onchange="Value2(this.value)">
<option value="" disabled selected>Select your option</option>
<option value="Friday">Friday</option>
<option value="Saturday">Saturday</option>
<option value="Sunday">Sunday</option>
<option value="Monday">Monday</option>
<option value="Tuesday">Tuesday</option>
<option value="Wednesday">Wednesday</option>
<option value="Thursday">Thursday</option>
</select>
</div>
<span asp-validation-for="Dayoff_2" class="text-danger"></span>
</div>
<div class="d-flex justify-content-center">
<span class="form-group mx-3">
<input type="submit" value="Save" class="btn btn-primary" />
</span>
<span class="form-group">
<a asp-controller="GeneralSetting" asp-action="Index" class="btn btn-danger">Cancel</a>
</span>
</div>
</form>
</div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    function Value(select1) {
        if (select1 != "") {
            $("#select2 option[value='" + select1 + "']").hide();
        }
    }

    function Value2(select2) {
        if (select2 != "") {
            $("#select1 option[value='" + select2 + "']").hide();
        }
    }
</script>