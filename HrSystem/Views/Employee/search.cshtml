@model GraduationProject.Models.Employee


<style>
    input {
        all: unset;
        font: 16px system-ui;
        height: 100%;
        width: 50%;
        padding: 6px 10px;
    }

    .table-wrapper {
        max-width: 100%;
        overflow-x: scroll;
    }
</style>
<div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
        <h1 class="p-4 my-2">
            <img class="mx-3" src="https://img.icons8.com/ios-filled/50/000000/men-age-group-5.png" />Employees
        </h1>
    </div>
</div>



<div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12 d-flex justify-content-around">
        <span>
            <form asp-action="search" method="get">
                <span>
                    <input name="SearchString" class="" type="text" placeholder="Search">

                    <button class="button btn ms-2" type="submit">
                        Search
                    </button>
                </span>
            </form>
        </span>
        <span>
            <a asp-action="Add" class="btn btn-danger text-white">
                Add New Employee
            </a>
        </span>
    </div>
</div>

<div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
        <div class="table-wrapper">

            <table class="table table-striped table-bordered zero-configuration">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Address)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Phone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Gender)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nationality)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NationalityID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BirthDay)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ContractDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AttendanceTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LeavingTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Salary)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Dept)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Gender)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Nationality)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.NationalityID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.BirthDay)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.ContractDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.AttendanceTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.LeavingTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Salary)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => Model.Dept.Name)
                        </td>
                        <td>
                            <a class="btn btn-success"  asp-action="Edit" asp-route-id="@Model.ID" onclick="Edit()">Edit</a>
                            <a class="btn btn-info"   asp-action="Details" asp-route-id="@Model.ID">Details</a>
                            <a class="btn btn-danger"   asp-action="Delete" asp-route-id="@Model.ID" Delete()>Delete</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>
</div>


<script>
    function Edit() {
        let result = confirm("Are You Sure You Want Edit");
        if (!result) {
            event.preventDefault();
        }
    }
    function Delete() {
        let result = confirm("Are You Sure You Want Delete");
        if (!result) {
            event.preventDefault();
        }
    }

</script>