@model IEnumerable<GraduationProject.Models.Employee>

@{
    ViewData["Title"] = "Index";

}




<style>
    input {
        all: unset;
        font: 16px system-ui;
        height: 100%;
        width: 50%;
        padding: 6px 10px;
    }

    .table-wrapper {
        max-width: 100%;
        overflow-x: scroll;
    }
</style>
<div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
        <h1 class="p-4 my-2">
            <img class="mx-3" src="https://img.icons8.com/ios-filled/50/000000/men-age-group-5.png" />Employees
        </h1>
    </div>
</div>



<div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12 d-flex justify-content-around">
        <span>
            <form asp-action="search" method="get">
                <span>
                    <input name="SearchString" class="" type="text" placeholder="Search">

                    <button class="button btn ms-2" type="submit">
                        Search
                    </button>
                </span>
            </form>
        </span>
        <span>
            <a asp-action="Add" class="btn btn-danger text-white">
                Add New Employee
            </a>
        </span>
    </div>
</div>






